<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnNavigationClose"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_round_arrow_back_ios_24"
        android:tint="#4978f0" />

    <FrameLayout
        android:id="@+id/userimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePic"
            android:layout_width="240dp"
            android:layout_height="248dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:padding="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:src="@drawable/user_icon"
            android:tint="#4978f0" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:background="#CEFFFFFF"
            android:gravity="center"
            android:text="Change Photo"

            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>
    <ImageView
        android:id="@+id/btn_edit_name"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_round_edit_24"
        android:tint="@color/black_overlay"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/userimg"/>

    <EditText
        android:id="@+id/username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableTint="@color/black_overlay"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:text="ACCOUNT USER NAME"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username1"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="Edit Profile > >"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/btn_save"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_edit_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_blue_btn"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/block_ad_img"
            android:tint="@color/white"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>






</RelativeLayout>
</ScrollView>