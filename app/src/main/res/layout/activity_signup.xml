<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_green"
    tools:context=".AppHelperActivities.LoginActivity">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"/>

    <FrameLayout
        android:id="@+id/user_dp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/user_icon"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:tint="#F30000" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="38dp"
            android:src="@drawable/ic_baseline_cloud_upload_24"
            android:tint="@color/white" />


    </FrameLayout>


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_dp_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:letterSpacing=".05"
        android:text="Sign Up Now"
        android:textColor="@color/black"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:letterSpacing=".05"
        android:text="Please fill the details and create account"/>

    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/text2"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Full Name:"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="#575757" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_fullname"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit_text"
        android:drawablePadding="10dp"
        android:paddingHorizontal="20dp"
        android:hint="Email:"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#575757" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_email"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableRight="@drawable/ic_baseline_visibility_off_24"
        android:drawablePadding="10dp"
        android:drawableTint="#575757"
        android:hint="Password:"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#575757" />
    <TextView
        android:id="@+id/btnForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:letterSpacing=".05"
        android:text="Password must be at least 6 character"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btnForgetPassword"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button_blue"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/signuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:letterSpacing=".05"
        android:text="Already have an account?? "
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignup"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/signuptext"
        android:letterSpacing=".05"
        android:text="Log In"
        android:clickable="true"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginBottom="70dp"
        android:letterSpacing=".05"
        android:text="@string/connect_with"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_google"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_fb"/>

    </LinearLayout>


</RelativeLayout>